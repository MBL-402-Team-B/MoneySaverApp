<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.phoenix.mbl402.moneysaverapp.MainActivity"
    tools:showIn="@layout/testing_area">

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/Tile_Page_Text_Size"
        android:text="Test TextView area 1" />

    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/Tile_Page_Text_Size"
        android:text="Test TextView area 2" />

    <TextView
        android:id="@+id/Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text2"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/Tile_Page_Text_Size"
        android:text="Test TextView area 3" />

    <TextView
        android:id="@+id/Text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/Tile_Page_Text_Size"
        android:text="Test TextView area 4" />

    <TextView
        android:id="@+id/Text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/Tile_Page_Text_Size"
        android:text="Test TextView area 5"/>

    <TextView
        android:id="@+id/Text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/Tile_Page_Text_Size"
        android:text="Test TextView area 6"/>

    <TextView
        android:id="@+id/Text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/Tile_Page_Text_Size"
        android:text="Test TextView area 7"/>

    <TextView
        android:id="@+id/Text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/Tile_Page_Text_Size"
        android:text="Test TextView area 8"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnFirstRecord"
        android:scaleX="1"
        android:contentDescription="First Record"
        android:src="@android:drawable/ic_media_rew"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnFirstRecord"
        android:layout_alignBottom="@id/btnFirstRecord"
        android:id="@+id/btnPreviousRecord"
        android:scaleX="-1"
        android:contentDescription="Previous Record"
        android:src="@android:drawable/ic_media_play"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnPreviousRecord"
        android:layout_alignBottom="@id/btnFirstRecord"
        android:id="@+id/btnNextRecord"
        android:scaleX="1"
        android:contentDescription="Next Record"
        android:src="@android:drawable/ic_media_play"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnNextRecord"
        android:layout_alignBottom="@id/btnFirstRecord"
        android:id="@+id/btnLastRecord"
        android:scaleX="-1"
        android:contentDescription="Last Record"
        android:src="@android:drawable/ic_media_rew"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnLastRecord"
        android:layout_alignBottom="@id/btnFirstRecord"
        android:id="@+id/btnNewRecord"
        android:scaleX="1"
        android:contentDescription="New Record"
        android:src="@android:drawable/ic_input_add"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnNewRecord"
        android:layout_alignBottom="@id/btnFirstRecord"
        android:id="@+id/btnDelRecord"
        android:scaleX="1"
        android:contentDescription="Delete Record"
        android:src="@android:drawable/ic_delete"/>

</RelativeLayout>
