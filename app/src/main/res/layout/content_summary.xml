<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/summary_toolbar"
    android:background="@color/colorProjectedBackground"
    tools:context=".SummaryActivity">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->



    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtGoal"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/txtGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtProjected"
        android:layout_centerHorizontal="true"
        android:textColor="@color/yellow"
        android:text="Savings Goal: $1,000"
        android:textSize="@dimen/GoalAndProjected_Text_Size" />

    <TextView
        android:id="@+id/txtProjected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_light"
        android:text="Projected: $50.00"
        android:textSize="@dimen/GoalAndProjected_Text_Size" />
</RelativeLayout>
